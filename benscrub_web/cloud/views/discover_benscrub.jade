mixin carousel_item(z_text, z_cta_text, z_url, z_image, z_color)
    - z_color = z_color || 'white' //default params
    .wrapper.slidesjs-slide
      img(src=z_image)
      .carousel_text
        span(style='font-size:14pt')
          =z_text
        br
        span(style='font-size:12px;')
          a(href=z_url, target='blank')
            font(color=z_color)=z_cta_text

mixin carousel
  .size_3x2.carousel.article.product.isotope-item(data-auto-slide='true', data-duration='3000')
    if block
      block

mixin article1x1_black(z_text, z_url)
  .article.size_1x1.isotope-item
    div(style="width:100%;height:100%;background-color:black")
      div(style="color:white;padding:15px;line-height:160%; font-size:13px;")
